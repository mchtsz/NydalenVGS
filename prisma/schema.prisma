datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model Users {
  id       Int          @id @default(autoincrement())
  username String       @unique
  mail     String       @unique
  password String
  token    String       @unique @default(cuid())
  role     Role
  classID  Int?
  class    Class?       @relation(fields: [classID], references: [id])
  personalInfo ContactInfo?
  computer Computer?
}

model ContactInfo {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  phone     String
  address   String
  userID    Int    @unique
  user      Users  @relation(fields: [userID], references: [id])
}

model Computer {
  id     Int      @id @default(autoincrement())
  age    DateTime
  model  String
  userID Int?     @unique
  user   Users?   @relation(fields: [userID], references: [id])
}

model Class {
  id    Int     @id @default(autoincrement())
  grade Grade
  users Users[]
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
  ENVIRONMENTWORKER
  ITCOWORKER
}

enum Grade {
  VG1
  VG2
  VG3
}
